@model IEnumerable<Film>

@{
    ViewData["Title"] = "Films";
}

<h1 class="text-center">Films</h1>

<div class="container container-lg shadow p-3 mb-5 bg-white rounded">
    @if (Model.Count() > 0)
    {
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Name of film</th>
                    <th>Genre</th>
                    <th>Directed by</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var film in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => film.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => film.Genre.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => film.Director.FirstName) @Html.DisplayFor(model => film.Director.LastName)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1>Ther aren't any films'</h1>
    }
</div>