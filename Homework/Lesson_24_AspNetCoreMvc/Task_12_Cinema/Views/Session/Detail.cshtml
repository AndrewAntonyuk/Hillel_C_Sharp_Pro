@model Film

@{
    ViewData["Title"] = "Film";
}

<h1 class="text-center">Film</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name of film
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Genre of film
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre.Name)
        </dd>
        <dt class="col-sm-2">
            Short description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Directed by
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Director.FirstName) @Html.DisplayFor(model => model.Director.LastName)
        </dd>
    </dl>
</div>

<div class="container container-lg shadow p-3 mb-5 bg-white rounded">
    @if (Model.Sessions.Count() > 0)
    {
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Date of session</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var session in Model.Sessions)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => session.EventDateTime)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1>Ther aren't any sessions'</h1>
    }
</div>
<div>
    <a class="btn btn-info btn-outline-warning text-light" asp-action="Index">Back to films</a>
</div>